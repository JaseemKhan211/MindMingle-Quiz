extends base

block content 
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Log into your account
            form.form.form--login
                .form__group
                    label.form__label(for='user_id') User Id
                    input#user_id.form__input(type='text', placeholder='JK-01', required)

                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    .password-wrapper
                        input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                        span#togglePw.toggle-icon
                            i.fa-solid.fa-eye  

                .form__group
                    button.btn.btn--green(type='submit') Login
