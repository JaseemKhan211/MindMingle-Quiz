extends base

block content 
  .form-container
    .form-header
      h2 Question & Answer Registration
    .form-wrapper
      // Question Form
      .form-section
        h3.section-title Question
        form
          .form-group
            label(for="question-id") Question ID
            input#question-id(type="text" placeholder="e.g., Q-123")
          
          .form-group
            label(for="question-type") Question Type
            select#question-type
              option(value="") Select Type
              option(value="academic") Academic
              option(value="subjective") Subjective
              option(value="short") Short

          .form-group
            label(for="question-status") Question Status
            select#question-status
              option(value="") Select Status
              option(value="pending") Pending
              option(value="in-progress") In Progress
              option(value="solved") Solved

          .form-group
            label(for="question-text") Question Text
            textarea#question-text(rows="8" placeholder="Enter your question here...")
            .button-group
              a.apibtn.btn-update(href="#")
                i.fas.fa-edit
                | Update  
              a.apibtn.btn-delete(href="#")
                i.fas.fa-trash-alt
                | Delete
      
      // Answer Form Ka hissa
      .form-section
        h3.section-title Answer
        form
          .form-group
            label(for="answer-id") Answer ID
            input#answer-id(type="text" placeholder="e.g., A-456")
            
          .form-group
            label(for="answer-type") Answer Type
            select#answer-type
              option(value="") Select Type
              option(value="short") Short
              option(value="detailed") Detailed
              option(value="one-line") One Line

          .form-group
            label(for="answer-options") Answer Options
            select#answer-options
              option(value="") Select Option
              option(value="A") A
              option(value="B") B
              option(value="C") C
            
          .form-group
            label(for="answer-remarks") Answer Remarks
            textarea#answer-remarks(rows="8" placeholder="Add remarks or notes about the answer...")
            .button-group
              a.apibtn.btn-update(href="#")
                i.fas.fa-edit
                | Update  
              a.apibtn.btn-delete(href="#")
                i.fas.fa-trash-alt
                | Delete

    .form-actions
      a.btn.btn-report(href='/quesreport')
        i.fa-solid.fa-arrow-down
        | Get Question Report
      a.btn.btn-report(href='/ansreport')
        i.fa-solid.fa-arrow-down
        | Get Answers Report
      a.btn.btn-cancel(type="button")
        i.fa-solid.fa-arrow-left
        | Cancel  
      a.btn.btn-cancel(type="button")
        i.fa-solid.fa-plus
        | Create   