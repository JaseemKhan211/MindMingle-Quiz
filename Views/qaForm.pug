extends base

block content 
  .form-container-qa
    .form-header-qa
      h2 Question & Answer Registration
    .form-wrapper-qa
      .form-section-qa
        h3.section-title-qa Question
        form
          .form-group-qa
            label(for="question-id") Define Question
            input#question-id.form__input__qa(type="text")
          
          .form-group-qa
            label(for="question-type") Type
            select#question-type.form__input__qa
              option(value="") Select Type
              option(value="academic") Academic
              option(value="subjective") Subjective
              option(value="short") Short

          .form-group-qa
            label(for="question-status") Status
            select#question-status.form__input__qa
              option(value="") Select Status
              option(value="pending") Pending
              option(value="in-progress") In Progress
              option(value="solved") Solved

          .form-group-qa
            label(for="question-text") Remarks
            textarea#question-text(rows="8" placeholder="Add remarks or notes about the question...")
            //- .button-group
