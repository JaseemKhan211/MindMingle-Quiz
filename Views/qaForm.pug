            //-     | Update  
            //-   a.apibtn.btn-delete(href="#")
            //-     i.fas.fa-trash-alt
            //-     | Delete
      
      .form-section-qa
        h3.section-title-qa Answer
        form
          .form-group-qa
            label(for="answer-id") Define Answer
            input#answer-id.form__input__qa(type="text")
            
          .form-group-qa
            label(for="answer-type") Type
            select#answer-type.form__input__qa
              option(value="") Select Type
              option(value="short") Short
              option(value="detailed") Detailed
              option(value="one-line") One Line

          .form-group-qa
            label(for="answer-options") Options
            select#answer-options.form__input__qa
              option(value="") Select Option
              option(value="A") A
              option(value="B") B
              option(value="C") C
            
          .form-group-qa
            label(for="answer-remarks") Remarks
            textarea#answer-remarks(rows="8" placeholder="Add remarks or notes about the answer...")
