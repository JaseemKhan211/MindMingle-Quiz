extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Adding User
            form.form.form--signup
                .form__group
                    label.form__label(for='user_id') User Id
                    input#user_id.form__input(type='text', placeholder='JK-09', required)
                .form__group
                    label.form__label(for='username') User name
                    input#username.form__input(type='text', placeholder='Jaseem Khan', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='text', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='passwordConfirm') Password Confirm 
                    input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green(type='submit') Add User